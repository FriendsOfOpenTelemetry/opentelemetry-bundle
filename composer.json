{
    "name": "gaelreyrol/opentelemetry-bundle",
    "description": "Symfony Bundle for OpenTelemetry PHP",
    "keywords": ["symfony", "bundle", "opentelemetry", "otel", "metrics", "tracing", "logging", "apm", "otlp"],
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "GaÃ«l Reyrol",
            "email": "me@gaelreyrol.dev"
        }
    ],
    "scripts": {
        "php-cs-fixer:fix": "@php ./vendor/bin/php-cs-fixer fix",
        "php-cs-fixer:lint": "@php-cs-fixer:fix --dry-run --diff",
        "phpstan": "@php vendor/bin/phpstan analyse",
        "phpunit": "@php vendor/bin/phpunit",
        "lint": [
            "@php-cs-fixer:lint",
            "@phpstan"
        ],
        "format": [
            "@php-cs-fixer:fix"
        ],
        "test": [
            "@phpunit"
        ]
    },
    "autoload": {
        "psr-4": {
            "GaelReyrol\\OpenTelemetryBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GaelReyrol\\OpenTelemetryBundle\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.2",
        "open-telemetry/api": "^1.0",
        "open-telemetry/sdk": "^1.0",
        "open-telemetry/sem-conv": "^1.22",
        "symfony/config": "^6.3",
        "symfony/dependency-injection": "^6.3",
        "symfony/http-kernel": "^6.3"
    },
    "require-dev": {
        "ext-ffi": "*",
        "ext-grpc": "*",
        "ext-mbstring": "*",
        "ext-opentelemetry": "*",
        "ext-xdebug": "*",
        "friendsofphp/php-cs-fixer": "^3.37",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpstan/phpstan-strict-rules": "^1.5",
        "phpstan/phpstan-symfony": "^1.3",
        "phpunit/phpunit": "^9.6",
        "roave/security-advisories": "dev-latest",
        "symfony/framework-bundle": "^6.3",
        "symfony/phpunit-bridge": "^6.3",
        "symfony/yaml": "^6.3"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "php-http/discovery": false
        },
        "sort-packages": true
    }
}
